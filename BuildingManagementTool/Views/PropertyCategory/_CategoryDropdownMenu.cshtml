
<style>

    .colorPicker {
        z-index: 1050; /* Higher than the dropdown menu's default */
        position: relative;
    }

</style>

<div class="dropdown show col-1" style="position:relative;">
    <button class="w-100 p-0 menu-button btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <svg width="40" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="3" r="1.5" fill="currentColor" />
            <circle cx="12" cy="10" r="1.5" fill="currentColor" />
            <circle cx="12" cy="17" r="1.5" fill="currentColor" />
        </svg>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">Edit</a>
        <a class="deleteCategoryModalBtn dropdown-item" data-id="@Model.PropertyCategoryId">Delete</a>
        <div class="dropdown-item">
            
            <input type="color" class="colorPicker" data-id="@Model.PropertyCategoryId" title="Pick a background color" value="@Model.Color" />
        </div>
    </div>
</div>
