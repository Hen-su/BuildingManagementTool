@model RenameDocumentViewModel

<div id="renameDocumentModel" class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered" role="document">
    <div class="modal-content px-4">
        <div class="modal-header">
            <h2>Rename Document</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
            <form id="renameDocumentForm" method="post" enctype="multipart/form-data">
                <div class="row justify-content-between">
                    <div id="renameWarning" class="alert alert-warning">
                        <strong>Warning:</strong> This document will be renamed!
                    </div>

                    <label asp-for="FileName" for="fileName">File Name:</label>
                    <input asp-for="FileName" id="fileName" class="form-control"></input>
                    <span asp-validation-for="FileName" class="text-danger"></span>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="button" class="btn btn-secondary btn-md rounded" data-bs-dismiss="modal">Close</button>
                    <button id="renameDocumentBtn" data-id="@Model.Document.DocumentId" class="btn btn-danger btn-md rounded">Rename</button>
                </div>
            </div>
        </div>
    </div>
</div>




