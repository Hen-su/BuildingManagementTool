@model Document

<partial name="_ToastNotification" />

<h1>Files</h1>
<button id="uploadModalBtn" class="btn-primary">Upload</button>

<div id="documentCardsContainer"> <!-- Container to populate the document cards-->

</div>

<div id="modalContainer" class="modal shadow" role="dialog">
    
</div>

<script>
    $(document).ready(function () {
    
        $("#uploadModalBtn").click(function () {
            $("#modalContainer").load("/Document/UploadFormPartial", function () {
                $("#modalContainer").modal("show");
            });
        });

        
        function loadDocumentCards() {
            $("#documentCardsContainer").load("/Document/DocumentCardPartial", function () {
               
            });
        }
        loadDocumentCards();
    });
</script>
