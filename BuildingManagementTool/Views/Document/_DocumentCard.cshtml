@model BuildingManagementTool.Models.Document

@{
    // Check if the current document is the selected document
    var isSelected = ViewBag.SelectedDocumentId != null && ViewBag.SelectedDocumentId == Model.DocumentId;
}

<style>
    .doc-card {
        align-items: center;
        border-radius: 10px;
        background: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        justify-content: center;
        text-align: center;
        margin-bottom: 1rem;
    }
    
   .doc-card.selected{
      border-style: solid;
    border-width: 4px;
    
   }

    .doc-card img {
        width: auto;
        height: 150px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }

    .doc-card-content h3,a {
        text-decoration: none;
        margin: 0.5rem ;
        font-size: 1rem;
    }

    .doc-card:hover {
        background-color: #f0f0f0;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="doc-card @(isSelected ? "selected" : "")">
    <img src="/imgs/pdf.svg" alt="Document Thumbnail" />
    <div class="doc-card-content">
        <h3>@Model.FileName</h3>
        <a  data-id = "@Model.DocumentId" class="viewBtn btn btn-primary">
            View Document
        </a>

        <a href="/Blob/Download/@Model.DocumentId" class="btn btn-primary">
            Download Document
        </a>


    </div>
</div>

<script>
    $(document).ready(function () {

        $(".viewBtn").click(function () {
            var documentId = $(this).data("id");
            $("#modalContainer").load("/Blob/PDFViewerPartial?id=" + documentId, function () {
                $("#modalContainer").modal("show");
            });
        })
    })
</script>


