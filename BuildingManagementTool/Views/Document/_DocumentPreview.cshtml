@model BuildingManagementTool.Models.Document

   

<div class="card bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header">Manage Document</div>
    <div class="card-body">
        <div class="row mb-2">
            <h5 class="card-title col-5">Title</h5>
            <p class="col-7">@Model.FileName</p>
        </div>

        <div class="row mb-2">
            <h5 class="card-title col-5">Uploaded</h5>
            <p class="col-7">@Model.UploadDate</p>
        </div>


        

        <div class="d-flex flex-column align-items-center">
            <a  data-id = "@Model.DocumentId" class="viewBtn btn btn-dark mb-2" style="width: 150px;">
            View 
            </a>
              <a asp-controller="Blob" asp-action="Download" asp-route-id="@Model.DocumentId" class="btn btn-dark mb-2" style="width: 150px";>
            Download 
             </a>
         
          <!-- <a href="" target="_blank" class="btn btn-dark mb-2" style="width: 150px;">
                Share
            </a>
            -->
            <a asp-controller="Blob" asp-action="DeleteBlob" asp-route-id="@Model.DocumentId" class="btn btn-danger" style="width: 150px;">
                Delete
            </a>
        </div>
    </div>
</div>


 <script>
    $(document).ready(function () {

        $(".viewBtn").click(function () {
            var documentId = $(this).data("id");
            $("#modalContainer").load("/Blob/PDFViewerPartial?id=" + documentId, function () {
                $("#modalContainer").modal("show");
            });
        })
    })
</script>

