
@model Document

<div id="addNoteModal" class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered" role="document">
    <div class="modal-content px-4">
        <div class="modal-header">
            <h2>Add a Note</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
            <form id="addNoteForm" method="post" enctype="multipart/form-data">
                <div class="row justify-content-between">


                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <div id="noteWarning" class="alert alert-warning">
                            <strong>Warning:</strong> This document already has a note. Submitting a new note will override the existing one.
                        </div>

                        <label for="noteInput">Existing Note:</label>
                        <textarea id="noteInput" class="form-control">@Model.Note</textarea>

                    }

                    else
                    {
                          <h4> Add Note to @Model.FileName </h4>
                    <input id="noteInput" class="form-control" autocomplete="Add your note here" />

                    }
                    <div id="noteError" class="text-danger" style="display:none;"></div>
                </div>
            </form>
            
        </div>
        <div class="modal-footer">
            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="button" class="btn btn-secondary btn-md rounded" data-bs-dismiss="modal">Close</button>
                    <button id="submitNoteBtn" data-id="@Model.DocumentId" class="btn btn-primary btn-md rounded">Create Note</button>
                </div>
                
            </div>

        </div>
    </div>
</div>




