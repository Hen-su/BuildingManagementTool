@model Document

<div id="deleteNoteModel" class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered" role="document">
    <div class="modal-content px-4">
        <div class="modal-header">
            <h2>Delete Note</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
            <form id="deleteNoteForm" method="post" enctype="multipart/form-data">
                <div class="row justify-content-between">


                    @if(!Model.IsActiveNote){


                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <div id="noteWarning" class="alert alert-warning">
                            <strong>Warning:</strong> This note will be deleted!
                            @Model.Note
                        </div>


                      
                    }

                    else
                    {
                        <h4> Note not found! </h4>

                        }
                    }
                    else
                    {
                        <div id="noteWarning" class="alert alert-warning">
                            <strong>Warning:</strong> This note is currently Active! Change the Active status to delete.
                            @Model.Note
                        </div>
                        
                    }
                    <div id="noteError" class="text-danger" style="display:none;"></div>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="button" class="btn btn-secondary rounded me-2" data-bs-dismiss="modal">Close</button>
                    <button id="deleteNoteBtm" data-id="@Model.DocumentId" class="btn btn-danger">Delete Note</button>
                </div>

            </div>

        </div>
    </div>
</div>




