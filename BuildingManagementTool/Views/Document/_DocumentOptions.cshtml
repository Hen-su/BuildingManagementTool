@model Document

<div class="card bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header">Manage Document</div>
    <div class="card-body">
        <div class="row mb-2">
            <h5 class="card-title col-5">Title</h5>
            <p class="col-7">@Model.FileName</p>
        </div>

        <div class="row mb-2">
            <h5 class="card-title col-5">Uploaded</h5>
            <p class="col-7">@Model.UploadDate</p>
        </div>

        <div class="d-flex flex-column align-items-center">
            @if (Model.ContentType.StartsWith("video") || Model.ContentType == "application/pdf" || Model.ContentType.StartsWith("image") || User.IsInRole("Viewer") || User.IsInRole("Manager"))
            {
                <a id="viewBtn" data-id = "@Model.DocumentId" class="btn btn-dark mb-2" style="width: 150px;">View</a>
            }
            else
            {
                <a class="btn btn-dark disabled">Unsupported Filetype For Viewing</a>
            }
            
              <a asp-controller="Blob" asp-action="Download" asp-route-id="@Model.DocumentId" class="btn btn-dark mb-2" style="width: 150px";>
            Download 
             </a>
         
          <!-- <a href="" target="_blank" class="btn btn-dark mb-2" style="width: 150px;">
                Share
            </a>
            -->
            @if (User.IsInRole("Manager"))
            {
              <a id="deleteConfBtn" data-id="@Model.DocumentId" class="btn btn-danger" style="width: 150px;">
                Delete
            </a>


                <a id="addNoteBtn" data-id="@Model.DocumentId" class="btn btn-success" style="width: 150px;">
                    Add Note
                </a>
            }
           
        </div>
        <div class="errorContainer alert alert-danger mt-2" style="display:none;"></div>
    </div>
</div>


 <script>
    $(document).ready(function () {


        $("#addNoteBtn").click(function () {
            var documentId = $(this).data("id"); // Use the data-id attribute
            var url = "/Document/AddNoteFormPartial/" + encodeURIComponent(documentId);
            $("#modalContainer").load(url, function () {
                $("#modalContainer").modal("show");
            });
        })




        //Returns a partial view
        $("#viewBtn").click(function () {
            var documentId = $(this).data("id");
            $("#modalContainer").load("/Blob/RenderFile?id=" + documentId, function () {
                $("#modalContainer").modal("show");
            });
        })

        $("#deleteConfBtn").click(function () {
            var documentId = $(this).data("id");
            $("#modalContainer").load("/Blob/DeleteConfirmationPartial?id=" + documentId, function () {
                $("#modalContainer").modal("show");
            });
        })

        //Reset container inner html on close
        $("#modalContainer").on('hidden.bs.modal', function () {
            $(this).html(''); // Clear the content
        });

    })
</script>

