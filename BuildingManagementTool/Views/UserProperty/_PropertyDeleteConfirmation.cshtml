@model Property

<div id="deleteConfirmationModal" class="modal-dialog modal-md modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal">
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this property?<br> <span class="text-danger">All associated data including files will be deleted</span> .</p>
                <h4 class="text-center">@Model.PropertyName</h4>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <a data-id="@Model.PropertyId" id="deletePropertyConfirmBtn" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
